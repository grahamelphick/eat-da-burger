<h1>Burgers!</h1>


<ul>
  {{#each burgers}}
   {{#unless devoured}}
  <li>
    <p>{{this.id}}. {{this.burger_name}}</p>

    <button class="make-devoured" data-id="{{id}}">
      DEVOUR!!
    </button>

  </li>
      {{/unless}}
  {{/each}}
</ul>


<h2>Burgers eaten</h2>


<ul>
  {{#each burgers}}
      {{#if devoured}}
  <li>
    <p>{{this.id}}. {{this.burger_name}}</p>
  </li>
      {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>